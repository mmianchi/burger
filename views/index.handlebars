<div class="container text-center">
  <img src="/assets/img/burger.png"  width="200" height="200">
  <div class="row">
    <div class="col-md-6">
      <h2>Eat-Da-Burger</h2>
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.id}}.{{this.burger_name}}
              <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit" class="btn btn-success">Devourer</button>
              </form>

            </li>
          {{/unless}}
        {{/each}}
        </ul>
      </div>

    <div class="col-md-6" >
      <h2>Burgers</h2>

      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.id}}.{{this.burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">

      <h2>Add a Burger</h2>
      <form class="create-update-form" action="burgers/create" method="POST">

        <div class="form-group">
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger" name="name">
        </div>

        <button type="submit" class="btn btn-success">Add A Burger</button>
      </form>
    </div>
  </div>
</div>
